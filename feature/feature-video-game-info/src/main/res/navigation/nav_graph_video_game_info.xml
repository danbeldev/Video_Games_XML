<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph_video_game_info"
    app:startDestination="@id/videoGameInfoFragment">

    <fragment
        android:id="@+id/videoGameInfoFragment"
        android:name="com.madproject.feature_video_game_info.screens.videoGameInfo.VideoGameInfoFragment"
        android:label="fragment_video_game_info"
        tools:layout="@layout/fragment_video_game_info" >

        <deepLink app:uri="jetnavapp://video_game_info/{video_game_id}" />

        <argument
            android:name="video_game_id"
            app:argType="integer" />
        <action
            android:id="@+id/action_videoGameInfoFragment_to_videoPlayerFragment"
            app:destination="@id/videoPlayerFragment" />
        <action
            android:id="@+id/action_videoGameInfoFragment_to_achievementsFragment"
            app:destination="@id/achievementsFragment" />
        <action
            android:id="@+id/action_videoGameInfoFragment_self"
            app:destination="@id/videoGameInfoFragment" />
        <action
            android:id="@+id/action_videoGameInfoFragment_to_qrCodeVideoGameFragment"
            app:destination="@id/qrCodeVideoGameFragment" />

    </fragment>
    <fragment
        android:id="@+id/videoPlayerFragment"
        android:name="com.madproject.feature_video_game_info.screens.videoPlayer.VideoPlayerFragment"
        android:label="VideoPlayerFragment" >
        <action
            android:id="@+id/action_videoPlayerFragment_to_videoGameInfoFragment"
            app:destination="@id/videoGameInfoFragment" />
    </fragment>
    <fragment
        android:id="@+id/achievementsFragment"
        android:name="com.madproject.feature_video_game_info.screens.achievementsScreen.AchievementsFragment"
        android:label="AchievementsFragment" />
    <fragment
        android:id="@+id/qrCodeVideoGameFragment"
        android:name="com.madproject.feature_video_game_info.screens.qrCodeVideoGameScreen.QrCodeVideoGameFragment"
        android:label="QrCodeVideoGameFragment" />
</navigation>