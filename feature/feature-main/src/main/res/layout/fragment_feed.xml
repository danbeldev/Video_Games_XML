<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/primary_background"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/ads_text_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="@string/ads"
            android:textColor="@color/secondary_background"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/video_games_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="@string/video_games"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/video_games_recycler_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:overScrollMode="never"
            tools:context=".screens.mainScreen.MainFragment">
        </androidx.recyclerview.widget.RecyclerView>
        <TextView
            android:id="@+id/platform_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="@string/platform_text"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/platform_recycler_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:overScrollMode="never"
            tools:context=".screens.mainScreen.MainFragment">
        </androidx.recyclerview.widget.RecyclerView>
        <TextView
            android:id="@+id/store_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="@string/store_text"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/store_recycler_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:overScrollMode="never"
            tools:context=".screens.mainScreen.MainFragment">
        </androidx.recyclerview.widget.RecyclerView>
        <TextView
            android:id="@+id/tags_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="@string/tags_text"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/tags_recycler_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:overScrollMode="never"
            tools:context=".screens.mainScreen.MainFragment">
        </androidx.recyclerview.widget.RecyclerView>
        <TextView
            android:id="@+id/creators_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="@string/creators"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/creators_recycler_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:overScrollMode="never"
            tools:context=".screens.mainScreen.MainFragment">
        </androidx.recyclerview.widget.RecyclerView>
    </LinearLayout>
</ScrollView>